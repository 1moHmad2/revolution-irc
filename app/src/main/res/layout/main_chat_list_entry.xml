<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/chat_time"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/TextAppearance.AppCompat.Body1"
        tools:text="#revolutionirc (Freenode)" />

    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:text="12:30" />

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/chat_counter"
        android:layout_below="@id/chat_name"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="mrarm: this is a test message" />

    <TextView
        android:id="@+id/chat_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/chat_time"
        android:layout_marginTop="2dp"
        android:background="@drawable/chat_list_message_count_bg"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:gravity="center"
        app:backgroundTint="?attr/colorAccent"
        android:textColor="?android:textColorPrimaryInverse"
        android:textSize="12sp"
        tools:text="100" />

</RelativeLayout>