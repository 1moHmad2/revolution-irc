<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBoxPreference
        android:key="dark_theme"
        android:title="@string/pref_title_dark_theme"
        android:summary="@string/pref_summary_dark_theme"
        android:defaultValue="false" />

    <io.mrarm.irc.util.ListWithCustomPreference
        android:key="chat_font"
        android:title="@string/pref_title_font"
        android:entries="@array/pref_entries_font"
        android:entryValues="@array/pref_entry_values_font"
        android:defaultValue="default"
        app:customValueType="font" />

</PreferenceScreen>
